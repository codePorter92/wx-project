/* components/goodList/goodList.wxss */
.goods_list {
  padding: 0 26rpx;
}
.goods_list navigator {
  display: flex;
  height: 209rpx;
  overflow: hidden;
  border-bottom: 1rpx solid #eee;
}
.goods_list navigator .good_picture {
  margin: 15rpx 30rpx 0 15rpx;
}
.goods_list navigator .good_picture image {
  width: 190rpx;
  height: 190rpx;
}
.goods_list navigator .good_name {
  height:66rpx;
  margin-top: 26rpx;
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient:vertical;
}